{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Extension (Client)",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}"
      ],
      "outFiles": [
        "${workspaceFolder}/client/out/**/*.js"
      ],
      "preLaunchTask": "npm: compile"
    },
    {
      "name": "Attach to Language Server (Python)",
      "type": "debugpy",
      "request": "attach",
      "connect": {
        "host": "127.0.0.1",
        "port": 5678
      },
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}/server",
          "remoteRoot": "${workspaceFolder}/server"
        }
      ]
    }
  ],
  "compounds": [
    {
      "name": "Client + Server",
      "configurations": [
        "Launch Extension (Client)",
        "Attach to Language Server (Python)"
      ]
    }
  ]
}